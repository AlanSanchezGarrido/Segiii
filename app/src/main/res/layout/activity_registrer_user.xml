<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A0C4E3"
    tools:context=".UI.RegistrerUser">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="#D0E4F7">

            <!-- Título -->
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registro"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="42sp"
                android:textStyle="bold"
                android:shadowColor="#55000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="3" />

            <!-- Campo: Nombre -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="30dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@android:color/white">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/txt_Nombre"
                    android:background="@android:color/transparent"
                    android:padding="12dp" />
            </androidx.cardview.widget.CardView>

            <!-- Campo: Apellidos -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apellidos"
                android:textStyle="bold"
                android:layout_marginTop="12dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="30dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@android:color/white">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/txt_Apellidos"
                    android:background="@android:color/transparent"
                    android:padding="12dp" />
            </androidx.cardview.widget.CardView>

            <!-- Campo: Nombre de usuario -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nickname"
                android:textStyle="bold"
                android:layout_marginTop="12dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="30dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@android:color/white">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/txt_Usuario"
                    android:background="@android:color/transparent"
                    android:padding="12dp" />
            </androidx.cardview.widget.CardView>

            <!-- Campo: Ingresa tu contraseña -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingresa tu contraseña"
                android:textStyle="bold"
                android:layout_marginTop="12dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="30dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@android:color/white">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/txt_Contraseña"
                    android:background="@android:color/transparent"
                    android:padding="12dp"
                    android:inputType="textPassword" />
            </androidx.cardview.widget.CardView>

            <!-- Campo: Confirmar contraseña -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_confirm_contraseña"
                android:textStyle="bold"
                android:layout_marginTop="12dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="30dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@android:color/white">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Repite la contraseña"
                    android:background="@android:color/transparent"
                    android:padding="12dp"
                    android:inputType="textPassword" />
            </androidx.cardview.widget.CardView>

            <!-- Campo: Ingreso por voz -->

            <!-- Imagen: Botón Guardar -->


            <!-- Imagen: Flecha de regreso -->
            <ImageView
                android:id="@+id/img_save"
                android:layout_width="201dp"
                android:layout_height="66dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:src="@drawable/boton1" />

            <ImageButton
                android:id="@+id/img_back"
                android:layout_width="76dp"
                android:layout_height="67dp"
                android:layout_gravity="end"
                android:layout_marginTop="16dp"
                android:background="@android:color/transparent"
                android:contentDescription="Volver"
                android:maxWidth="63dp"
                android:maxHeight="62dp"
                android:scaleType="fitCenter"
                android:src="@drawable/boton2" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
